<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/primary_text_default_material_light</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.Transition</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splashing</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Transition" parent="@android:style/Animation.Activity">
        <item name="android:windowShowAnimation">@null</item>
        <item name="android:windowHideAnimation">@null</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/primary_text_default_material_light</item>
        <item name="android:textColorSecondary">@color/primary_text_default_material_light</item>
    </style>

    <style name="ToolbarTheme.PopUp" parent="ToolbarTheme">
        <item name="android:textColorPrimary">@color/primary_material_dark</item>
        <item name="android:textColorSecondary">@color/primary_dark_material_dark</item>
        <item name="android:popupBackground">@color/background_material_dark</item>
    </style>

    <style name="ButtonTheme" parent="Base.Widget.AppCompat.Button">
        <item name="android:minHeight">60dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:background">@color/button_background</item>
    </style>

    <style name="AppTheme.TabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>
</resources>
