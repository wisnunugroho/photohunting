<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_singin"/>

    <LinearLayout
        android:id="@+id/container_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_16"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_32"
            android:gravity="center"
            android:padding="@dimen/space_16"
            android:text="Masuk Akun Anda"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_32"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/space_16"
            android:text="Nikmati kemudahan informasi lokasi foto terbaik disekitar Anda."
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/content_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container_title"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_32"
        android:layout_marginRight="@dimen/space_32"
        app:cardBackgroundColor="#67ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/space_16">

            <EditText
                android:id="@+id/signin_ed_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_16"
                android:background="@color/black_alternate_2"
                android:drawableLeft="@drawable/ic_person_grey"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:textColor="@color/text_color_white"
                android:textColorHint="@color/text_color_hint"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/signin_ed_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_16"
                android:background="@color/black_alternate_2"
                android:drawableLeft="@drawable/ic_lock_grey"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="18dp"
                android:textColor="@color/text_color_white"
                android:textColorHint="@color/text_color_hint"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/signin_btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|end"
                android:layout_margin="@dimen/space_16"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_orange"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="12dp"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <com.victor.loading.newton.NewtonCradleLoading
        android:id="@+id/cradle_loading"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/content_login"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
</RelativeLayout>