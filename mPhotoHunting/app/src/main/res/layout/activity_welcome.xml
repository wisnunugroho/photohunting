<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <ImageView
        android:id="@+id/welcome_img_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/image_login"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginTop="@dimen/space_16"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="24dp"
        android:text="Berbagi Lokasi Foto"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:paddingBottom="24dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="Berbagi lokasi foto jadi lebih mudah. Dapatkan info lokasi terbaru bersama fotografer lainnya."
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/welcome_btn_signin"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/content_signup"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_orange"
        android:gravity="center"
        android:padding="@dimen/space_16"
        android:text="Login"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/content_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/space_16"
        android:gravity="center"
        android:padding="@dimen/space_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum punya akun?"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_16"/>

        <TextView
            android:id="@+id/welcome_btn_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_8"
            android:text="Daftar disini"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>
</RelativeLayout>